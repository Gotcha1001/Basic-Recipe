<%- include('partials/header.ejs'); %>

<style>
    .gradient-background2 {
    background: linear-gradient(300deg, #f3f2f5, #26054d, #010003);
    background-size: 180% 180%;
    animation: gradient-animation 12s ease infinite;
  
   /*background-size: cover; */
    
    background-attachment: fixed; /* Keep background fixed when scrolling */
    
  }
  
  
  @keyframes gradient-animation {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  footer {
    flex: 0 0 auto;
    color: white;
    text-align: center;
  }
</style>

<body class="gradient-background2">
    <div class="container">
        <h1 class="text-center my-4">Modify a New Recipe</h1>
        <form action="/modify/<%= recipe.id %>" method="post">


            <!--Input for Recipe Name Title-->

            <div class="mb-3">
                <label for="title" class="form-label">Recipe Title</label>
                <input type="text" class="form-control" id="title" name="title" value="<%= recipe.title %>" required>
            </div>

            <!--Input for URL-->
            <div class="mb-3">
                <label for="image_url" class="form-label">Picture URL</label>
                <input type="text" class="form-control" id="image_url" name="image_url" value="<%= recipe.image_url %>">
            </div>

            <!--Input for ingredients-->
            <div class="mb-3">
                <label for="ingredients" class="form-label">Ingredients</label>
                <textarea class="form-control" id="ingredients" name="ingredients" required><%= recipe.ingredients %></textarea>
            </div>

            <!--Input for Recipe-->
            <div class="mb-3">
                <label for="recipe" class="form-label">Recipe</label>
                <textarea class="form-control" id="recipe" name="recipe" required><%= recipe.recipe %></textarea>
            </div>

            <!--button to submit-->
            <button type="submit" class="btn btn-primary">Save Modified Recipe</button>
        </form>
    </div>
    

    <%- include('partials/footer.ejs'); %>
</body>
