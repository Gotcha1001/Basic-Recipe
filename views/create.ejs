<%- include('partials/header.ejs'); %>

<body class="gradient-background2">
    <div class="container">
        <h1 class="text-center my-4">Create a New Recipe</h1>
        <form action="/add" method="post">


            <!--Input for Recipe Name Title-->

            <div class="mb-3">
                <label for="title" class="form-label">Recipe Title</label>
                <input type="text" class="form-control" id="title" name="title" required>
            </div>

            <!--Input for URL-->
            <div class="mb-3">
                <label for="image_url" class="form-label">Picture URL</label>
                <input type="text" class="form-control" id="image_url" name="image_url">
            </div>

            <!--Input for ingredients-->
            <div class="mb-3">
                <label for="ingredients" class="form-label">Ingredients</label>
                <textarea class="form-control" id="ingredients" name="ingredients" required></textarea>
            </div>

            <!--Input for Recipe-->
            <div class="mb-3">
                <label for="recipe" class="form-label">Recipe</label>
                <textarea class="form-control" id="recipe" name="recipe" required></textarea>
            </div>

            <!--button to submit-->
            <button type="submit" class="btn btn-primary">Add Recipe</button>
        </form>
    </div>
    

    <%- include('partials/footer.ejs'); %>
</body>
